{% extends 'base.html.twig' %}

{% block title %}Citoyen
{% endblock %}

{% block content %}
<div class="page-wrapper">
    <div class="content container-fluid pb-0">
        <h4 class="mb-3">Citoyens</h4>
        <div class="row">
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col-md-12 d-flex justify-content-end">
                        <div class="text-right">
                            <a class="btn btn-primary btn-add" style="width:190px" href="{{ path('app_citoyen_new') }}">
                                <i class="feather-plus-square me-1"></i>
                                Ajouter Citoyen
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <table class="table datatable-basic table table-borderless hover-table" id="datatable">
                    <div class="card-body">
                        <div class="header-elements">
                            <thead class="thead-light">
                                <tr>
                                    <th>Id</th>
                                    <th>Email</th>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Tel</th>
                                    <th>Adresse</th>

                                    <th colspan="3">
                                        <center>Actions</center>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                {% for citoyen in citoyens %}
                                <tr>

                                    <td>{{ citoyen.id }}</td>
                                    <td>{{ citoyen.email }}</td>
                                    <td>{{ citoyen.nom }}</td>
                                    <td>{{ citoyen.prenom }}</td>
                                    <td>{{ citoyen.tel }}</td>
                                    <td>{{ citoyen.adresse }}</td>
                                    <td style="display: inline-flex;margin-left: 78px;" colspan="3">

                                        <a href="{{ path('app_citoyen_show', {'id': citoyen.id}) }}"
                                            class="btn btn-sm bg-primary-light">
                                            <i class="far fa-eye"></i>

                                        </a>
                                        &nbsp;
                                        <a href="{{ path('app_citoyen_edit', {'id': citoyen.id}) }}"
                                            class="btn btn-sm bg-info-light">
                                            <i class="far fa-edit"></i>

                                        </a>
                                        &nbsp;
                                        {{ include('citoyen/_delete_form.html.twig') }}
                                    </td>

                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="20">no records found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endblock %}