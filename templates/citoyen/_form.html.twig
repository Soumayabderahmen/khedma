{% extends 'base.html.twig' %}
{% block title %}New Specialites
{% endblock %}
{% block content %}
	<h1>Create new Specialites</h1>
	{# 
		{{ include('specialites/_form.html.twig') }} #}

	{# <a href="{{ path('app_specialites_index') }}">back to list</a> #}
	<div class="page-wrapper">
		<div class="content">
			<div class="row">
				<div class="col-sm-12">
					<div class="card">
						<div class="card-body">
							 {{ form_start(form) }}
								<div class="row">
                                
									<div class="col-12">
										<div class="form-heading">
											<h4>Citoyen Details</h4>
										</div>
									</div>

   
									<div class="col-12 col-md-6 col-xl-4">
										<div class="form-group local-forms">
											<label>Nom
												<span class="login-danger">*</span>
											</label>
											{{ form_widget(form.nom, {attr:{'class':'form-control'}}) }}
										</div>
									</div>
									<div class="col-12 col-md-6 col-xl-4">
										<div class="form-group local-forms">
											<label>Prenom
												<span class="login-danger">*</span>
											</label>
											{{ form_widget(form.prenom, {attr:{'class':'form-control'}}) }}
										</div>
									</div>
									
								
									<div class="col-12 col-md-6 col-xl-4">
										<div class="form-group local-forms">
											<label>Telephone
												<span class="login-danger">*</span>
											</label>
											{{ form_widget(form.tel, {attr:{'class':'form-control'}}) }}
										</div>
									</div>
                                   
									
									
	
									
									<div class="col-12 col-md-6 col-xl-4">
										<div class="form-group local-forms">
											<label>Email
												<span class="login-danger">*</span>
											</label>
											{{ form_widget(form.email, {attr:{'class':'form-control'}}) }}
										</div>
									</div>
									<div class="col-12 col-md-6 col-xl-4">
										<div class="form-group local-forms">
											<label>
												Password
												<span class="login-danger">*</span>
											</label>
											{{ form_widget(form.password, {attr:{'class':'form-control'}}) }}

										</div>
									</div>
									<div class="col-12 col-md-6 col-xl-4">
										<div class="form-group local-forms">
											<label>Confirme Password
												<span class="login-danger">*</span>
											</label>
											{{ form_widget(form.confirm_password, {attr:{'class':'form-control'}}) }}
										</div>
									</div>
							
									
								
									
                                    <div class="col-12 col-sm-12">
										<div class="form-group local-forms">
											<label>Address
												<span class="login-danger">*</span>
											</label>
											{{ form_widget(form.adresse, {attr:{'class':'form-control'}}) }}
										</div>
									</div>
								
									
									


									


									
									<div class="col-12">
										<div class="doctor-submit text-end">
                            													<div class="text-right"> {{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary save-btn'}}) }} </div>

										</div>
									</div>
								</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
